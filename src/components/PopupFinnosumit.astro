---
import Image from "astro/components/Image.astro"
import img from "../assets/images/home/finnosummit-mayo.png"
---
<style>
    /* Estilos base */
    #finnosummit-popup {
        display: none;
        position: fixed;
        z-index: 9999;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.6);
        justify-content: center;
        align-items: center;
    }

    #finnosummit-popup .popup-content {
        background: transparent;
        padding: 0px;
        border-radius: 12px;
        max-width: 500px;
        width: 90%;
        position: relative;
        color: white;
        text-align: center;
    }

    #finnosummit-popup img {
        max-width: 100%;
        height: auto;
        display: block;
        margin: 0 auto;
    }

    #finnosummit-popup .close-btn {
        position: absolute;
        top: 7px;
        right: 7px;
        font-size: 24px;
        color: #000000;
        cursor: pointer;
        background: #d7df23;
        border-radius: 50PX;
        padding: 2px 10px;
    }

    #finnosummit-popup .popup-content {

    }

    @media (max-width: 768px) {
        #finnosummit-popup .popup-content {
            width: 80%;
        }
        #finnosummit-popup .close-btn {
            top: 4px;
            right: 4px;
        }
    }
    
    @media (min-width: 800px) {
        #finnosummit-popup .popup-content {
            max-width: 300px;
        }#finnosummit-popup .close-btn {
            top: 3px;
            right: 3px;
        }

    }
    
    @media (min-width: 1300px) {
        #finnosummit-popup .popup-content {
            max-width: 350px;
        }#finnosummit-popup .close-btn {
            top: 5px;
            right: 5px;
        }

    }
</style>

<div id="finnosummit-popup">
    <div class="popup-content">
        <span class="close-btn">&times;</span>
        <a href="https://go.tpm.marketing/mango-summit2025" target="_blank" rel="noopener noreferrer">
            <Image src={img} alt="Popup Finnosummit">
        </a>
    </div>
</div>

<script is:inline>
    document.addEventListener('DOMContentLoaded', function () {
        const popup = document.getElementById('finnosummit-popup');
        const closeBtn = document.querySelector('#finnosummit-popup .close-btn');

        setTimeout(() => {
            popup.style.display = 'flex';
        }, 3000);

        closeBtn.addEventListener('click', () => {
            popup.style.display = 'none';
        });

        popup.addEventListener('click', (e) => {
            if (e.target === popup) {
                popup.style.display = 'none';
            }
        });
    });
</script>