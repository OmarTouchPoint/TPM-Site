					<div class="accordion-menu self-center justify-between rounded-t-2xl bg-white flex w-full pt-3 lg:px-7 lg:max-w-[900px] px-3 gap-2">
						<button class="menu-option pt-2 px-2 active" data-tab="stakeholders">Stakeholders</button>
						<button class="menu-option pt-2 px-2" data-tab="eventos">Eventos Ejecutivos</button>
						<button class="menu-option pt-2 px-2" data-tab="gestion">Gestión de Eventos</button>
					</div>
